@using Harmony.Presentation.Main.Models

@model List<Employee>


<div class="container">

    <div class="card w-100 shadow p-2 mb-2 bg-white rounded">
        <h2 class="fw-bold text-center font-monospace">Empleados</h2>
    </div>

    <div class="card w-100 shadow p-3 mb-4 bg-white rounded">
        <div class="card-body">
            <div class="row">
                @foreach (var employee in Model)
                {
                    <div class="col-4">
                        @await Html.PartialAsync("./Helpers/CardsEmpleado.cshtml", employee )
                    </div>
                }
            </div>
        </div>
    </div>



</div>
